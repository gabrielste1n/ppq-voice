{
  "appId": "com.herotools.ppqvoice",
  "productName": "PPQ Voice",
  "directories": {
    "output": "dist"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "files": [
    "main.js",
    "preload.js",
    "package.json",
    "node_modules/**/*",
    "src/dist/**/*",
    "src/helpers/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils.js",
    "src/utils/**/*",
    "src/updater.js",
    "src/components.json",
    "!node_modules/.cache/**/*",
    "!src/node_modules/**/*"
  ],
  "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*"
  ],
  "extraResources": [
    "src/assets/**/*",
    "resources/macos-globe-listener.swift",
    "resources/bin/macos-globe-listener"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "src/assets/icon.icns",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "resources/mac/entitlements.mac.plist",
    "entitlementsInherit": "resources/mac/entitlements.mac.plist",
    "identity": "HeroTools Inc. (9R85XFMH59)",
    "extendInfo": {
      "LSUIElement": false,
      "NSMicrophoneUsageDescription": "PPQ Voice needs microphone access for speech-to-text transcription.",
      "NSAccessibilityUsageDescription": "PPQ Voice needs accessibility permissions to paste transcribed text into other applications."
    }
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "src/assets/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "src/assets/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dmg": {
    "title": "PPQ Voice",
    "icon": "src/assets/icon.icns",
    "background": "src/assets/dmg-background.png",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "publish": {
    "provider": "github",
    "owner": "HeroTools",
    "repo": "ppq-voice",
    "private": false,
    "releaseType": "draft"
  }
}
